{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "inventariosMK",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "inventarioMK",
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
    "plugins": {
    "updater": {
      "pubkey": "CONTENIDO_CLAVE_PUBLICA",
      "endpoints": 
      [
        "https://tu-servidor.com{{target}}-{{arch}}/{{current_version}}"
      ]
    }
  }
}
